<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="444dp"
        android:layout_marginStart="32dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:fontFamily="@font/roboto_bold"
                android:text="Leave Details"
                android:textColor="#191919"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/pdt_three_pending"
                android:layout_width="86dp"
                android:layout_height="wrap_content"
                android:background="@drawable/border"
                android:padding="6dp"
                android:layout_marginTop="24dp"
                android:layout_gravity="center_horizontal"
                android:text="Pending"
                android:textAlignment="center"
                android:textColor="#FFA931"
                android:textSize="12sp"
                android:visibility="visible"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="286dp"
                android:layout_height="232dp"
                android:orientation="vertical"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:background="#FAFAFA">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="Leave type :"
                        android:textColor="#636363"
                        android:textSize="14sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sick Leave"
                        android:textColor="#191919"
                        android:layout_marginStart="16dp"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="Duration     :"
                        android:textColor="#636363"
                        android:textSize="14sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2 days"
                        android:textColor="#191919"
                        android:layout_marginStart="16dp"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="Date(s)       :"
                        android:textColor="#636363"
                        android:textSize="14sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12/05/2022 - 13/05/2022"
                        android:textColor="#191919"
                        android:layout_marginStart="16dp"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="Reason(s)  :"
                        android:textColor="#636363"
                        android:textSize="14sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="At vero eos et accusamus et iusto odio dignissimos ducimus qui blanditiis praesentium voluptatum deleniti atque corrupti quos dolores et quas."
                        android:textColor="#191919"
                        android:layout_marginStart="16dp"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:visibility="visible"
                android:id="@+id/layout_leave_delete_dialog"
                android:layout_marginStart="32dp"
                android:layout_marginTop="12dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/delete_icon"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DELETE"
                    android:layout_marginStart="8dp"
                    android:textColor="#594099"
                    android:textSize="16dp"
                    android:fontFamily="@font/roboto_bold"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="133dp"
                android:layout_height="56dp"
                android:layout_gravity="right"
                android:layout_marginRight="28dp"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                android:id="@+id/approved_rejected_layout"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Approved by"
                    android:textSize="10dp"
                    android:visibility="gone"
                    android:textColor="#AEAEAE"
                    android:fontFamily="@font/roboto_bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rejected by"
                    android:textSize="10dp"
                    android:textColor="#AEAEAE"
                    android:visibility="visible"
                    android:fontFamily="@font/roboto_bold"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/profilee"
                    app:civ_border_color="#9673FF"
                     />
                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="8dp"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Jeffrey B. Hall"
                            android:textColor="#191919"
                            android:fontFamily="@font/roboto_bold"
                            android:textSize="12dp"

                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10dp"
                            android:textColor="#636363"
                            android:fontFamily="@font/roboto"
                            android:text="Teacher"/>


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>