<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    android:layout_margin="4dp"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/days_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/roboto"
                    android:text="2 "
                    android:textColor="#AEAEAE" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/roboto"
                    android:text="days"
                    android:textColor="#AEAEAE" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="270dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="24dp"
                    android:id="@+id/moreDelete"
                    android:src="@drawable/ic_baseline_more_vert_24"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginEnd="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="2dp"
                    android:id="@+id/leave_Start_date_Tv"
                    android:fontFamily="@font/roboto_bold"
                    android:text="12/05/2022 "
                    android:textColor="#191919"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/roboto_bold"
                    android:text="-"
                    android:textColor="#191919"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:id="@+id/leave_end_date_Tv"
                    android:fontFamily="@font/roboto_bold"
                    android:text=" 12/05/2022"
                    android:textColor="#191919"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/leave_pending"
                    android:layout_width="86dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border"
                    android:padding="6dp"
                    android:text="Pending"
                    android:layout_marginStart="90dp"
                    android:textAlignment="center"
                    android:textColor="#FFA931"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/leave_approved"
                    android:layout_width="86dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/leave_approve"
                    android:padding="6dp"
                    android:text="Approved"
                    android:layout_marginStart="90dp"
                    android:textAlignment="center"
                    android:textColor="#28DF99"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/leave_rejected"
                    android:layout_width="86dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/leave_reject"
                    android:padding="6dp"
                    android:text="Approved"
                    android:layout_marginStart="100dp"
                    android:textAlignment="center"
                    android:textColor="#FF414D"
                    android:textSize="12sp"
                    android:visibility="visible"
                    android:textStyle="bold" />


            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="2dp"
                android:text="Sick Leave"
                android:layout_marginBottom="12dp"
                android:id="@+id/leave_type"
                android:textColor="#636363"
                android:textSize="12sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

