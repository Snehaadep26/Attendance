<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dailog_bg"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="18dp"
        android:layout_marginTop="12dp"
        android:textColor="#191919"
        android:textAlignment="center"
        android:fontFamily="@font/roboto_bold"
        android:text="Confirm"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to delete?"
        android:textColor="#636363"
        android:layout_marginTop="4dp"
        android:textSize="14dp"
        android:layout_gravity="center"
        android:fontFamily="@font/roboto"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:orientation="horizontal">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_button_color_white"
        android:text="No" />

    <Button
        android:id="@+id/confirm_topic_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@drawable/round_button1"
        android:layout_margin="10dp"
        android:text="Yes" />
</LinearLayout>
</LinearLayout>

